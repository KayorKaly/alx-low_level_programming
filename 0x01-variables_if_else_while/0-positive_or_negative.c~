#include <stdio.h>
#include <stdlib.h>
#include <time.h>
/**
 *main - Program entry point
 *Program to show either positive or negative number,
 *base on the user input
 *Return: return value 0
 */
int main(void)
{
int n;

srand(time(0));
n = rand() - RAND_MAX / 2;
if (n < 0)
   {
      printf("%d is negative\n", n);
   }
else if (n > 0)
   {
      printf("%d is positive\n", n);
   }
else
    printf("%d is zero\n", n);
return (0);
}
